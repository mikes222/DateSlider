<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateSliderButLayout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <Button android:id="@+id/decMonth"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_media_rew"/>
    <Button
        android:id="@+id/decWeek"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_media_previous"/>
    <Button
        android:id="@+id/incWeek"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_media_next"/>
    <Button
        android:id="@+id/incMonth"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_media_ff"/>
</LinearLayout>